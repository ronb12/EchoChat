{
  "name": "echochat-server",
  "version": "1.0.0",
  "description": "Backend server for EchoChat Stripe integration - Production-ready with Vite",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "vite build",
    "build:prod": "NODE_ENV=production vite build",
    "preview": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "node test-stripe.js",
    "validate-env": "node -e \"console.log('Environment:', process.env.NODE_ENV || 'development')\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "stripe": "^14.21.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "nodemon": "^3.0.2",
    "vite": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "stripe",
    "payments",
    "express",
    "backend",
    "vite",
    "production"
  ],
  "author": "Bradley Virtual Solutions, LLC",
  "license": "MIT"
}
