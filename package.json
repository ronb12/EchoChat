{
  "name": "echochat",
  "version": "1.0.0",
  "description": "Advanced messaging app with end-to-end encryption, real-time communication, and cross-platform support",
  "main": "index.js",
  "scripts": {
    "start": "vite preview --port 3000",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "dev": "vite",
    "preview": "vite preview",
    "server": "node server/server.js",
    "server:dev": "nodemon server/server.js",
    "server:build": "cd server && npm run build",
    "server:build:prod": "cd server && npm run build:prod",
    "server:start": "cd server && npm run start",
    "server:start:prod": "cd server && npm run start:prod",
    "server:preview": "cd server && npm run preview",
    "server:install": "cd server && npm install",
    "deploy:setup": "bash scripts/setup-production-env.sh",
    "deploy:backend": "bash scripts/deploy-backend.sh",
    "deploy:build": "bash scripts/build-production.sh",
    "deploy:production": "bash scripts/deploy-production.sh",
    "deploy": "firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:rules": "firebase deploy --only firestore:rules,firestore:indexes,storage",
    "deploy:all": "npm run deploy:build && firebase deploy",
    "deploy:firebase": "firebase deploy",
    "deploy:prod": "bash scripts/deploy-with-alias.sh",
    "functions:install": "cd functions && npm install",
    "functions:serve": "firebase emulators:start --only functions",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:responsive": "node tests/responsive.test.js",
    "test:responsive:watch": "HEADLESS=false node tests/responsive.test.js",
    "test:mobile:interactive": "HEADLESS=false node tests/interactive-mobile.test.js",
    "test:all-views": "node test-all-views.js",
    "test:comprehensive": "node test-all-features-comprehensive.js",
    "test:business": "node test-business-features.js",
    "test:stripe": "node scripts/test-stripe-cli.js",
    "stripe:check": "node scripts/switch-stripe-mode.js check",
    "stripe:test": "node scripts/switch-stripe-mode.js test",
    "stripe:live": "node scripts/switch-stripe-mode.js live",
    "test:money": "node scripts/test-money-features.js",
    "test:stripe-ui": "node scripts/test-stripe-ui-full-flow.js",
    "test:card-payments": "node scripts/test-card-payments.js",
    "test:card-payments:fast": "node scripts/test-card-payments-fast.js",
    "test:setup-payments": "node scripts/test-setup-payments.js",
    "test:setup-payments-simple": "node scripts/test-setup-payments-simple.js",
    "test:parent-child": "node scripts/test-parent-child-features.js",
    "test:contact-requests": "node scripts/test-contact-requests.js",
    "test:contact-requests:auto": "node test-contact-requests-automated.js",
    "test:messaging:auto": "node test-messaging-automated.js",
    "test:user-search": "node scripts/test-user-search.js",
    "test:auth": "node test-auth-automated.js",
    "test:auth:watch": "HEADLESS=false node test-auth-automated.js",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix"
  },
  "keywords": [
    "messaging",
    "chat",
    "pwa",
    "encryption",
    "real-time"
  ],
  "author": "Bradley Virtual Solutions, LLC",
  "license": "MIT",
  "dependencies": {
    "@stripe/react-stripe-js": "^5.3.0",
    "@stripe/stripe-js": "^8.2.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "firebase": "^12.5.0",
    "firebase-admin": "^13.5.0",
    "jspdf": "^3.0.3",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stripe": "^19.2.0",
    "web-push": "^3.6.6"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitejs/plugin-react": "^4.2.1",
    "css-loader": "^6.8.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "http-server": "^14.1.1",
    "jest": "^30.2.0",
    "jest-puppeteer": "^11.0.0",
    "nodemon": "^3.1.10",
    "puppeteer": "^24.26.1",
    "style-loader": "^3.3.3",
    "vite": "^7.1.12"
  }
}
