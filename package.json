{
  "name": "echochat",
  "version": "1.0.0",
  "description": "Advanced messaging app with end-to-end encryption, real-time communication, and cross-platform support",
  "main": "index.js",
  "scripts": {
    "start": "vite preview --port 3000",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "dev": "vite",
    "preview": "vite preview",
    "deploy": "firebase deploy --only hosting",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:responsive": "node tests/responsive.test.js",
    "test:responsive:watch": "HEADLESS=false node tests/responsive.test.js",
    "test:mobile:interactive": "HEADLESS=false node tests/interactive-mobile.test.js",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix"
  },
  "keywords": [
    "messaging",
    "chat",
    "pwa",
    "encryption",
    "real-time"
  ],
  "author": "Bradley Virtual Solutions, LLC",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "crypto-js": "^4.2.0",
    "firebase": "^10.7.1",
    "firebase-admin": "^13.5.0",
    "web-push": "^3.6.6"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitejs/plugin-react": "^4.2.1",
    "css-loader": "^6.8.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "http-server": "^14.1.1",
    "jest": "^30.2.0",
    "jest-puppeteer": "^11.0.0",
    "puppeteer": "^24.26.1",
    "style-loader": "^3.3.3",
    "vite": "^7.1.12"
  }
}
